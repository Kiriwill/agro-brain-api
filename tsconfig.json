{
  "compilerOptions": {
    "target": "es2016",

	/* Modules */
    "module": "commonjs",                                     
	"outDir": "./dist",                                  
	"esModuleInterop": true,                             
	"forceConsistentCasingInFileNames": true,      
	"resolveJsonModule": true,

	/* Type Checking */
    "strict": true,
	"strictPropertyInitialization": false,
	"skipLibCheck": true,     
	"emitDecoratorMetadata": true,
	"experimentalDecorators": true,

	"typeRoots":  [
	  "./src/@types",
	  "./@types",
	  "./node_modules/@types"
	]
  }
}
